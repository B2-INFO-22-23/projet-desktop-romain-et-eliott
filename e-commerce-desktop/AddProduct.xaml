        <TextBox x:Name="Publishers" HorizontalAlignment="Center" Height="26" Margin="0,178,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="188" />
        <TextBox x:Name="Descrption" HorizontalAlignment="Center" Height="26" Margin="0,209,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="188" />
        <Label Content="Name:" HorizontalAlignment="Left" Height="26" Margin="263,87,0,0" VerticalAlignment="Top" Width="43"/>
        <Label Content="Price:" HorizontalAlignment="Left" Height="26" Margin="263,118,0,0" VerticalAlignment="Top" Width="43"/>
        <Label Content="Quantity:" HorizontalAlignment="Left" Height="26" Margin="242,149,0,0" VerticalAlignment="Top" Width="59"/>
        <Label Content="Publishers:" HorizontalAlignment="Left" Height="26" Margin="233,180,0,0" VerticalAlignment="Top" Width="68"/>
        <Label Content="Descrption:" HorizontalAlignment="Left" Height="26" Margin="229,207,0,0" VerticalAlignment="Top" Width="77"/>
        <TextBox x:Name="CategoryId" HorizontalAlignment="Center" Height="26" Margin="0,242,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="188" />
        <Label Content="CategoryId:" HorizontalAlignment="Left" Height="26" Margin="229,240,0,0" VerticalAlignment="Top" Width="77"/>

    </Grid>
</Page>
